{% extends 'layout.html.twig' %}

{% block title %}SocialNetwork index{% endblock %}

{% block content %}
    <main id="sn-index" class="col-10 p-5">
        <h1>Réseaux sociaux</h1>

        <section class="row mt-5">
            <div class="col-3">
                <a class="btn btn-light" href="{{ path('app_social_network_new') }}">Ajouter un réseau social</a>
            </div>
            <table class="table mt-5">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom</th>
                        <th>Logo</th>
                        <th>Profil</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for social_network in social_networks %}
                    <tr>
                        <td>{{ social_network.id }}</td>
                        <td>{{ social_network.name }}</td>
                        <td><span class="{{ social_network.logoUrl }}"></span></td>
                        <td>{{ social_network.profileUrl }}</td>
                        <td>
                            <a href="{{ path('app_social_network_show', {'id': social_network.id}) }}"><span class="bi-eye-fill"></span></a>
                            <a href="{{ path('app_social_network_edit', {'id': social_network.id}) }}"><span class="bi-pencil-fill"></span></a>
                            <a href="{{ path('app_social_network_edit', {'id': social_network.id}) }}"><span class="bi-trash-fill"></span></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">Pas de réseau social</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </section>

    </main>
{% endblock %}
