{% extends 'layout.html.twig' %}

{% block title %}Réseau Social : {{ social_network.name }}{% endblock %}

{% block content %}
    <main id="sn-detail" class="col-10 p-5">
        <h1>Réseau Social : {{ social_network.name }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ social_network.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ social_network.name }}</td>
            </tr>
            <tr>
                <th>LogoUrl</th>
                <td>{{ social_network.logoUrl }}</td>
            </tr>
            <tr>
                <th>ProfileUrl</th>
                <td>{{ social_network.profileUrl }}</td>
            </tr>
            </tbody>
        </table>

        <a class="my-5 btn btn-light" href="{{ path('app_social_network_index') }}">Retour à la liste</a>

        <a class="my-5 btn btn-primary" href="{{ path('app_social_network_edit', {'id': social_network.id}) }}">Modifier {{ social_network.name }}</a>

        {{ include('social_network/_delete_form.html.twig') }}
    </main>
{% endblock %}
