{% extends 'layout.html.twig' %}

{% block title %}Réseau Social : {{ post.name }}{% endblock %}

{% block content %}
    <main id="sn-detail" class="col-10 p-5">
        <h1>Publication : {{ post.name }}</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Id</th>
                <td>{{ post.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ post.name }}</td>
            </tr>
            <tr>
                <th>PublishDate</th>
                <td>{{ post.publishDate ? post.publishDate|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            </tbody>
        </table>

        <a class="my-5 btn btn-light" href="{{ path('app_post_index') }}">Retour à la liste</a>

        <a class="my-5 btn btn-primary" href="{{ path('app_post_edit', {'id': post.id}) }}">Modifier {{ post.name }}</a>

        {{ include('post/_delete_form.html.twig') }}
    </main>
{% endblock %}